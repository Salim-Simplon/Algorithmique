Exercice 14 :

Algorithme :

int N;
Lire("Ecrire l'entier à trois chiffres: ");
Ecrire(N);
int X = N div 100;
int Y = N div 10;
int Z = N mod 10;
Lire(X+Y+Z);

Programme :

System.out.printLn("Ecrire l'entier à trois chiffres: ");
Scanner int=new Scanner(System.in);
int N = int.nextInt();
int X = N div 100;
int Y = N div 10;
int Z = N mod 10;
System.out.printLn(X+Y+Z);

Exercice 15 :

System.out.printLn("Prix hors taxe de l'article: ");
Scanner float=new Scanner(System.float);
float X = float.nextFloat();
System.out.printLn("Nombre d'article: ");
Scanner int=new Scanner(System.in);
int N = int.nextInt();
System.out.printLn("TVA de l'article: ");
Scanner float=new Scanner(System.float);
float Y = float.nextFloat();
float Z = (X+Y)*N;
System.out.printLn("Le nombre de produit est "+N+", le prix HTTC est "+X+" et le prix total TTC est "+Z)



















